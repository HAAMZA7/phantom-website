---
interface Props {
  icon: string;
  title: string;
  subtitle: string;
}

const { icon, title, subtitle } = Astro.props;
---

<div class="bg-card p-6 rounded-xl border border-gray-800 flex flex-col items-center justify-center text-center hover:border-primary/30 transition-colors">
  <i class:list={[icon, "text-3xl text-primary mb-3"]}></i>
  <span class="font-bold text-white">{title}</span>
  <span class="text-xs text-gray-500">{subtitle}</span>
</div>
