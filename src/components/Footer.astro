---
// Footer component with signature
import Signature from './Signature.astro';
---

<footer class="bg-dark border-t border-white/5 py-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main footer content -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <span class="text-2xl font-bold text-white">Phan<span class="text-primary">Tom</span>_</span>
        <p class="text-gray-500 text-sm mt-1">YDays Project 2025 - Ynov Rouen</p>
      </div>
      <div class="flex space-x-6 text-gray-400">
        <a href="#" class="hover:text-primary transition-colors" aria-label="LinkedIn">
          <i class="fa-brands fa-linkedin text-xl"></i>
        </a>
        <a href="#" class="hover:text-primary transition-colors" aria-label="GitHub">
          <i class="fa-brands fa-github text-xl"></i>
        </a>
        <a href="#" class="hover:text-primary transition-colors" aria-label="Discord">
          <i class="fa-brands fa-discord text-xl"></i>
        </a>
      </div>
    </div>
    
    <!-- Signature -->
    <div class="mt-8 pt-6 border-t border-white/5">
      <Signature />
    </div>
  </div>
</footer>
