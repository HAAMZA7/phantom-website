---
// Signature component - Reusable animated developer signature
interface Props {
  showLink?: boolean;
}

const { showLink = true } = Astro.props;
---

<div class="signature-container">
  <div class="signature-content">
    <span class="made-text">Made with</span>
    <span class="heart">❤️</span>
    <span class="by-text">by <strong>Hamza DJOUDI</strong></span>
  </div>
  {showLink ? (
    <a href="https://djoudi.dev" target="_blank" rel="noopener" class="signature-link">
      djoudi.dev
    </a>
  ) : (
    <span class="signature-link">djoudi.dev</span>
  )}
</div>

<style>
  .signature-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    font-family: inherit;
  }

  .signature-content {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.875rem;
    color: #9ca3af;
  }

  .made-text, .by-text {
    transition: color 0.3s;
  }

  .signature-container:hover .made-text,
  .signature-container:hover .by-text {
    color: #f9fafb;
  }

  .by-text strong {
    color: #f9fafb;
    font-weight: 600;
  }

  /* Heart pulse animation */
  .heart {
    display: inline-block;
    font-size: 1rem;
    animation: heartbeat 1.5s ease-in-out infinite;
    filter: drop-shadow(0 0 8px rgba(239, 68, 68, 0.6));
  }

  @keyframes heartbeat {
    0%, 100% { transform: scale(1); }
    15% { transform: scale(1.25); }
    30% { transform: scale(1); }
    45% { transform: scale(1.2); }
    60% { transform: scale(1); }
  }

  /* Gradient animated link */
  .signature-link {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.9rem;
    font-weight: 700;
    background: linear-gradient(
      90deg,
      #bef264 0%,
      #4ade80 25%,
      #22d3ee 50%,
      #4ade80 75%,
      #bef264 100%
    );
    background-size: 200% auto;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-flow 3s linear infinite;
    text-decoration: none;
    transition: filter 0.3s;
  }

  .signature-link:hover {
    filter: drop-shadow(0 0 12px rgba(190, 242, 100, 0.5));
    animation-duration: 1s;
  }

  @keyframes gradient-flow {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  /* Subtle float on hover */
  .signature-container:hover {
    animation: float 2s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }
</style>
