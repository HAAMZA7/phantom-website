---
interface Props {
  title: string;
  subtitle: string;
  price: string;
  duration: string;
  features: string[];
  icon: string;
  highlighted?: boolean;
  badge?: string;
  ctaText: string;
}

const { 
  title, 
  subtitle, 
  price, 
  duration, 
  features, 
  icon, 
  highlighted = false,
  badge,
  ctaText
} = Astro.props;

const cardClasses = highlighted 
  ? "relative bg-dark border border-primary rounded-2xl p-8 transform md:-translate-y-4 shadow-[0_0_30px_rgba(190,242,100,0.1)]"
  : "relative bg-dark border border-gray-800 rounded-2xl p-8 hover:border-primary/50 transition-all hover:-translate-y-2";

const btnClasses = highlighted
  ? "block w-full py-3 text-center bg-primary rounded-lg text-dark hover:bg-white transition-colors font-bold"
  : "block w-full py-3 text-center border border-gray-700 rounded-lg text-white hover:bg-primary hover:text-dark hover:border-primary transition-colors font-bold";
---

<div class:list={["group reveal", cardClasses]}>
  {badge && (
    <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-primary text-dark px-4 py-1 rounded-full text-xs font-bold uppercase tracking-wide">
      {badge}
    </div>
  )}
  
  <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-100 transition-opacity">
    <i class:list={[icon, "text-4xl text-primary"]}></i>
  </div>
  
  <h3 class="text-2xl font-bold text-white mb-2">{title}</h3>
  <p class="text-gray-400 text-sm mb-6">{subtitle}</p>
  
  <div class="text-3xl font-bold text-primary mb-1">{price}</div>
  <div class="text-sm text-gray-500 mb-8">{duration}</div>
  
  <ul class="space-y-4 mb-8 text-gray-300">
    {features.map((feature) => (
      <li class="flex items-start">
        <i class="fa-solid fa-check text-primary mt-1 mr-3"></i>
        <span set:html={feature}></span>
      </li>
    ))}
  </ul>
  
  <a href="#contact" class={btnClasses}>
    {ctaText}
  </a>
</div>
